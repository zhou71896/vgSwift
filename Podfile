# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'
use_frameworks!
target 'vg' do
    pod 'Kingfisher'                    # 缓存图片 https://github.com/onevcat/Kingfisher，同 SDWebImage
    pod 'Alamofire'                     # 数据请求 https://github.com/Alamofire/Alamofire，同 AFNetworking
    pod 'SwiftyJSON'                    # json 解析 https://github.com/SwiftyJSON/SwiftyJSON
    pod 'SVProgressHUD'                 # 提示功能 https://github.com/SVProgressHUD/SVProgressHUD
    pod 'MJRefresh'                     # 上拉和下拉刷新框架 https://github.com/CoderMJLee/MJRefresh
    pod 'SwiftTheme'                    # 主题替换方案 https://github.com/jiecao-fm/SwiftTheme
    pod 'SMSSDK'
end
